<h2>Update the drone</h2>

<form action="/drones/{{drone._id}}/edit" method="POST">
  <div>
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="{{drone.name}}" required>
  </div>
  
  <div>
    <label for="propellers">Propellers:</label>
    <input type="number" id="propellers" name="propellers" value="{{drone.propellers}}" required min='1'>
  </div>
  
  <div>
    <label for="maxSpeed">Max Speed:</label>
    <input type="number" id="maxSpeed" name="maxSpeed" value="{{drone.maxSpeed}}" required min='1'>
  </div>
  
  <button type="submit">Update</button>
</form>

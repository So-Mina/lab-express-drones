<h1>Create a new drone</h1>

{{#if errorMessage}}
  <div class="alert alert-danger" role="alert">{{errorMessage}}</div>
{{/if}}

<form action="/drones/create" method="POST">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name" name="name" required>
  </div>
  <div class="form-group">
    <label for="propellers">Propellers</label>
    <input type="number" class="form-control" id="propellers" name="propellers" required min='1'>
  </div>
  <div class="form-group">
    <label for="maxSpeed">Max Speed</label>
    <input type="number" class="form-control" id="maxSpeed" name="maxSpeed" required min='1'>
  </div>
  <button type="submit" class="btn btn-primary">Create</button>
</form>
